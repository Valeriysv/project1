public class Animal {
    public String name;
    public Animal(String name){
        this.name = name;
    }
    public String sayName(){
        return name;
    }
    public void saySomething(){
        System.out.println("I'm an animal, my name is "+sayName());
    }
}
class Cat extends Animal{
    public Cat(String name) {
        super(name);
    }

    public void saySomething(){
        System.out.println("I'm a cat, my name is "+sayName());
    }
}
class Dog extends Animal{
    public Dog(String name) {
        super(name);
    }

    public void saySomething(){
        System.out.println("I'm a dog, my name is "+sayName());
    }
}
 class MyTest {
     public static void main(String[] args) {
         Animal ourCat = new Cat("Dusya");
         ourCat.saySomething();
         Animal ourDog = new Dog("Tuzik");
         ourDog.saySomething();
     }
}
